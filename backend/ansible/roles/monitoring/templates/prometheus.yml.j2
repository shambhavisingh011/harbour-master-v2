global:
  scrape_interval: 15s
scrape_configs:
  - job_name: 'node_exporter'
    static_configs:
      - targets:
{% for host in groups['all'] %}
        - '{{ hostvars[host].ansible_host | default(hostvars[host].inventory_hostname) }}:9100'
{% endfor %}
  - job_name: 'mysql'
    static_configs:
      - targets:
{% for host in (groups['galera'] | default([]) + groups['async'] | default([])) | unique %}
        - '{{ hostvars[host].ansible_host | default(hostvars[host].inventory_hostname) }}:9104'
{% endfor %}
